<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 clearfix">
                <div class="thumbnail">
                    <div class="caption">
                        <h4 class="pull-right">@item.SeasonChapter - @item.EpisodeChapter</h4>
                        <h4><a href="#">@item.Title</a></h4>                        
                    </div>
                    <img src="@item.URLImgChapter" alt="">
                    <div class="caption">                        
                        <p>@item.Description.</p>
                        <p><a target="_blank" class="btn btn-default" href="@item.URLVideo">MP4 Video 1280X720</a></p>
                    </div>
                    <div class="ratings">
                        <p class="pull-right">@item.YearSeason</p>
                        <p>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                        </p>
                        @*<p>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </p>*@
                    </div>
                </div>
            </div>
        }
    </div>
</div>

